@model IEnumerable<Mango.Web.Models.ProductDto>
@{
}
<br />
<br />
<div class="container border">
    @*<div class="row pb-2">*@
        <div class="col">
            <h1 class="text-primary">Products List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="CreateProduct" class="btn btn-outline-primary"><i class="fa-solid fa-plus"></i> Create New Product </a>
        </div>
    @*</div>*@
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.CategoryName
                    </td>
                    <td>
                        @item.Price.ToString("c")
                    </td>
                    <td>
                        <a asp-action="ProductEdit" class="btn btn-success" asp-route-productId="@item.ProductId">
                            <i class="fa-solid fa-pencil"></i>
                        </a>
                        <a asp-action="ProductDelete" class="btn btn-danger" asp-route-productId="@item.ProductId">
                            <i class="fa-solid fa-circle-xmark"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
